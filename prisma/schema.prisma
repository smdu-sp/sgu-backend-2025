generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Permissao {
  DEV
  ADM
  USR
}

model Usuario {
  id            String    @id @default(uuid())
  nome          String
  nomeSocial    String?
  login         String    @unique
  email         String    @unique
  permissao     Permissao @default(USR)
  status        Boolean   @default(true)
  avatar        String?   @db.Text
  estagiario    Boolean   @default(false)
  codigoUnidade String

  ultimoLogin   DateTime  @default(now())
  criadoEm      DateTime  @default(now())
  atualizadoEm  DateTime  @default(now()) @updatedAt

  funcionario   Funcionario?
  unidade       Unidade?  @relation(fields: [codigoUnidade], references: [codigo])

  @@map("usuarios")
}

model Funcionario {
  usuarioId     String    @id @unique
  rf            String    @unique
  vinculo       Int       @unique
  nomeCargo     String
  refCargo      String
  observacao    String?

  usuario       Usuario   @relation(fields: [usuarioId], references: [id])
  
  @@map("funcionarios")
}

model Unidade {
  codigo        String    @id @unique
  nome          String    @unique
  sigla         String    @unique
  status        Boolean   @default(true)

  criadoEm      DateTime  @default(now())
  atualizadoEm  DateTime  @default(now()) @updatedAt

  usuarios      Usuario[]

  @@map("unidades")
}

model CargaSigpec {
  id            String    @id @default(uuid())
  rf            String
  nome          String?
  vinculo       String?
  especie       String?
  inicio        DateTime? @db.Date
  termino       DateTime? @db.Date
  cargo         String?
  nomeCargo     String?
  refCargo      String?
  unidade       String?
  nomeSetor     String?
  relJurAdm     String?
  tipoEvento    String?
  inicioExerc   DateTime? @db.Date
  titular       String?
  numVincTit    String?
  nomeFuncTit   String?
  inicioRem     DateTime? @db.Date
  fimRem        DateTime? @db.Date
  observacao    String?
  vaga          String?

  mes           Int
  ano           Int

  criadoEm      DateTime  @default(now())
  atualizadoEm  DateTime  @default(now()) @updatedAt

  @@map("cargas_sigpec")
}

enum TipoFeriado {
  FERIADO_NACIONAL
  FERIADO_ESTADUAL
  FERIADO_MUNICIPAL
  PONTO_FACULTATIVO
}

model Feriado {
  id            String    @id @default(uuid())
  data          DateTime  @db.Date @unique
  tipo          TipoFeriado
  descricao     String?

  criadoEm      DateTime  @default(now())
  atualizadoEm  DateTime  @default(now()) @updatedAt

  @@map("feriados")
}

model FeriadoRecorrente {
  id            String    @id @default(uuid())
  dia           Int
  mes           Int
  tipo          TipoFeriado
  descricao     String?

  criadoEm      DateTime  @default(now())
  atualizadoEm  DateTime  @default(now()) @updatedAt

  @@map("feriados_recorrentes")
}